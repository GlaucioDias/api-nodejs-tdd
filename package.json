{
  "name": "api-nodejs-tdd",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node src",
    "dev": "nodemon src",
    "lint": "eslint src/** test/** --fix",
    "test": "jest --coverage --runInBand --forceExit",
    "test:secure": "jest --watchAll --verbose=true"
  },
  "husku": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./src/services": {
        "lines": 100
      }
    }
  },
  "devDependencies": {
    "eslint": "5.10.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "supertest": "3.3.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "1.18.3",
    "consign": "0.1.6",
    "express": "4.16.4",
    "husky": "1.2.0",
    "jwt-simple": "0.5.5",
    "knex": "0.15.2",
    "knex-logger": "^0.1.0",
    "moment": "2.22.2",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "pg": "7.7.1"
  }
}
